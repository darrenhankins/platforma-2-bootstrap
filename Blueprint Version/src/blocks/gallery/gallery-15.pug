mixin gallery-15()
  .swiper.swiper-overflow.py-5
    .container
      .swiper-container.row(id='slider-gallery-15')
        .swiper-wrapper
          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

          .swiper-slide.col-11.col-md-4
            img(src="./assets/pictures/image-540x540.png").w-100

      a.carousel-control-prev.carousel-control-outside(id='slider-gallery-15-prev' href='')
        .carousel-control-prev-icon
      a.carousel-control-next.carousel-control-outside(id='slider-gallery-15-next' href='')
        .carousel-control-next-icon

  // Script
  script.
    var mySwiper15 = new Swiper('#slider-gallery-15', {
      speed: 400,
      navigation: {
        nextEl: '#slider-gallery-15-next',
        prevEl: '#slider-gallery-15-prev',
      },
      pagination: {
        el: '#slider-gallery-15-pagination',
        clickable: true
      },
      slidesPerView: 'auto'
    });

    $(mySwiper15.slides).each(function () {
      $(this).on('click', function () {
        if (mySwiper15.activeIndex >= $(this).index()) {
          mySwiper15.slidePrev();
        } else {
          mySwiper15.slideNext();
        }
      });
    });
