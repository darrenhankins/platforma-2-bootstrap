mixin footers-5()
  .row.pt-4.mb-4.mb-lg-5
    .col-12.col-lg-4.mb-4.mb-lg-0
      img(src='./assets/logos/acme.svg' width='91').mb-3
      p.small.text-muted
        | Stórhöfði 33
        br
        | 110 Reykjavík, Iceland
        br
        | Tel: +354 587 9999
        br
        a(href='').text-muted
          span info@mountainguides.is

      .mt-3.d-lg-none
        a(href='').transparent-link.mr-2
          img(src="./assets/glyphs/twitter.svg" width="24")

        a(href='').transparent-link.mr-2
          img(src="./assets/glyphs/facebook.svg" width="24")

        a(href='').transparent-link.mr-2
          img(src="./assets/glyphs/linkedin.svg" width="24")

      .mt-3.d-none.d-lg-block
