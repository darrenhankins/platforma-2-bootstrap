mixin forms-1()
  .row.justify-content-center.text-center.py-5
    .col-12.col-md-6.col-lg-4
      form.mb-3
        .form-group
          input(type='text' placeholder='Email').form-control.form-control-lg
        button.btn.btn-lg.btn-primary.btn-block Action

      .small.text-secondary.mt-6
        = 'By signing in you agree with the '
        a(href='').text-secondary.secondary-link.weight-500
          span Terms and Conditions
        = ' and '
        a(href='').text-secondary.weight-500
          span Privacy Policy
