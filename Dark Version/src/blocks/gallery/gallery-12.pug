mixin gallery-12()
  .swiper.swiper-overflow.py-5
    .container.position-relative
      .swiper-container.row(id='slider-gallery-12')
        .swiper-wrapper
          .swiper-slide
            .col-12
              .images-ratio.ratio-2-1(style='background-image: url(./assets/pictures/image-1110x540.png)')

          .swiper-slide
            .col-12
              .images-ratio.ratio-2-1(style='background-image: url(./assets/pictures/image-1110x540.png)')

          .swiper-slide
            .col-12
              .images-ratio.ratio-2-1(style='background-image: url(./assets/pictures/image-1110x540.png)')

      a.carousel-control-prev.carousel-control-outside(id='slider-gallery-12-prev' href='')
        .carousel-control-prev-icon
      a.carousel-control-next.carousel-control-outside(id='slider-gallery-12-next' href='')
        .carousel-control-next-icon

  // Script
  script.
    var mySwiper12 = new Swiper('#slider-gallery-12', {
      speed: 400,
      navigation: {
        nextEl: '#slider-gallery-12-next',
        prevEl: '#slider-gallery-12-prev',
      },
      pagination: {
        el: '#slider-gallery-12-pagination',
        clickable: true
      },
      slidesPerView: 'auto'
    });
